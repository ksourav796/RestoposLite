<div class="modal fade ExchangeRate" tabindex="-1" id="add_new_PrinterSelection_modal" role="dialog"
     data-backdrop="static"
     aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-md">
        <div class="modal-content checkout">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 id="order-title" class="modal-title">Select Fields To Get On Printer</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <form class="form-horizontal">
                            <fieldset>
                                <h4 class="modal-title">Company Details:</h4>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Company Name Font Size:</label>
                                    <div class="col-lg-9" ng-init="printer.font='2'">
                                        <input type="radio" ng-model="printer.font" value="2">2
                                        <input type="radio" ng-model="printer.font" value="3">3
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Company
                                        Description</label>
                                    <div class="col-lg-9">
                                        <input id="cmpnydesc" name="cmpnydesc"
                                               type="text" placeholder="Company Description"
                                               ng-model="printer.companyDescription"
                                               class="form-control input-md" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">GSTIN:</label>
                                    <div class="col-lg-9" ng-init="printer.gstn='Yes'">
                                        <input type="radio" ng-model="printer.gstn" value="Yes">Yes
                                        <input type="radio" ng-model="printer.gstn" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Company Email:</label>
                                    <div class="col-lg-9" ng-init="printer.companyEmail='Yes'">
                                        <input type="radio" ng-model="printer.companyEmail" value="Yes">Yes
                                        <input type="radio" ng-model="printer.companyEmail" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Phone:</label>
                                    <div class="col-lg-9" ng-init="printer.phone='Yes'">
                                        <input type="radio" ng-model="printer.phone" value="Yes">Yes
                                        <input type="radio" ng-model="printer.phone" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Address:</label>
                                    <div class="col-lg-9" ng-init="printer.address='Yes'">
                                        <input type="radio" ng-model="printer.address" value="Yes">Yes
                                        <input type="radio" ng-model="printer.address" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pincode:</label>
                                    <div class="col-lg-9" ng-init="printer.pincode='Yes'">
                                        <input type="radio" ng-model="printer.pincode" value="Yes">Yes
                                        <input type="radio" ng-model="printer.pincode" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Invoice No:</label>
                                    <div class="col-lg-9" ng-init="printer.invoiceNo='Yes'">
                                        <input type="radio" ng-model="printer.invoiceNo" value="Yes">Yes
                                        <input type="radio" ng-model="printer.invoiceNo" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Date:</label>
                                    <div class="col-lg-9" ng-init="printer.date='Yes'">
                                        <input type="radio" ng-model="printer.date" value="Yes">Yes
                                        <input type="radio" ng-model="printer.date" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Steward:</label>
                                    <div class="col-lg-9" ng-init="printer.steward='Yes'">
                                        <input type="radio" ng-model="printer.steward" value="Yes">Yes
                                        <input type="radio" ng-model="printer.steward" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pax:</label>
                                    <div class="col-lg-9" ng-init="printer.pax='Yes'">
                                        <input type="radio" ng-model="printer.pax" value="Yes">Yes
                                        <input type="radio" ng-model="printer.pax" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Table:</label>
                                    <div class="col-lg-9" ng-init="printer.table='Yes'">
                                        <input type="radio" ng-model="printer.table" value="Yes">Yes
                                        <input type="radio" ng-model="printer.table" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Token No:</label>
                                    <div class="col-lg-9" ng-init="printer.tokenNo='Yes'">
                                        <input type="radio" ng-model="printer.tokenNo" value="Yes">Yes
                                        <input type="radio" ng-model="printer.tokenNo" value="No">No
                                    </div>
                                </div>

                                <h4 class="modal-title">Order Details:</h4>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Agent:</label>
                                    <div class="col-lg-9" ng-init="printer.agent='Yes'">
                                        <input type="radio" ng-model="printer.agent" value="Yes">Yes
                                        <input type="radio" ng-model="printer.agent" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">OrderId:</label>
                                    <div class="col-lg-9" ng-init="printer.orderId='Yes'">
                                        <input type="radio" ng-model="printer.orderId" value="Yes">Yes
                                        <input type="radio" ng-model="printer.orderId" value="No">No
                                    </div>
                                </div>
                                <h4 class="modal-title">Customer Details:</h4>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Name:</label>
                                    <div class="col-lg-9" ng-init="printer.customerName='Yes'">
                                        <input type="radio" ng-model="printer.customerName" value="Yes">Yes
                                        <input type="radio" ng-model="printer.customerName" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Phone:</label>
                                    <div class="col-lg-9" ng-init="printer.customerPhone='Yes'">
                                        <input type="radio" ng-model="printer.customerPhone" value="Yes">Yes
                                        <input type="radio" ng-model="printer.customerPhone" value="No">No
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Address:</label>
                                    <div class="col-lg-9" ng-init="printer.customerAddress='Yes'">
                                        <input type="radio" ng-model="printer.customerAddress" value="Yes">Yes
                                        <input type="radio" ng-model="printer.customerAddress" value="No">No
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Footer Value</label>
                                    <input type="checkbox" ng-model="checkbox">Yes
                                    <div class="col-lg-9" style="position: relative;">
                                        <input id="footerText" name="footerText"
                                               type="text" placeholder="Footer Text"
                                               ng-model="printer.footerText" ng-disabled="!checkbox"
                                               class="form-control input-md" autocomplete="off">
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-toggle="modal"
                        data-target=".print-me" ng-click="savePrinterSelection()">Save
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
